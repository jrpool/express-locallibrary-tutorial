extends layout

block content
  h1 #{title}: #{bookinstance.imprint}

  p Do you really want to delete this BookInstance?

  form(method='POST' action='')
    div.form-group
      input#instanceid.form-control(
        type='hidden'
        name='instanceid'
        required='true'
        value=bookinstance._id
      )

    button.btn.btn-primary(type='submit') Delete
